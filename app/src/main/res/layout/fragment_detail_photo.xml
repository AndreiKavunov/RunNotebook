<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_notebook"
    tools:context=".DetailPhotoFragment" >

    <ImageView
        android:id="@+id/photo_det_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"

        android:background="@color/white"
        android:ems="10"
        android:gravity="left"
        android:hint="@string/description"
        android:inputType="textMultiLine|textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="3"
        app:srcCompat="@drawable/no_photo"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/photo_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="left"
        android:hint="@string/description"
        android:inputType="textMultiLine|textPersonName"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/photo_det_id"
        app:layout_constraintStart_toStartOf="@+id/photo_det_id"
        app:layout_constraintTop_toBottomOf="@+id/photo_det_id"
        app:layout_constraintVertical_weight="2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/purple_700"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/photo_det_id"
        app:layout_constraintEnd_toEndOf="@+id/photo_det_id" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        app:backgroundTint="@color/purple_700"
        app:tint="@color/white"
        android:src="@drawable/ic_baseline_save_24"
        app:layout_constraintBottom_toBottomOf="@+id/photo_text"
        app:layout_constraintEnd_toEndOf="@+id/photo_text" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:src="@drawable/ic_delete"
        app:backgroundTint="@color/purple_700"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/photo_text"
        app:layout_constraintStart_toStartOf="@+id/photo_text" />

</androidx.constraintlayout.widget.ConstraintLayout>